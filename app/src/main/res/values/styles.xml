<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheetdialoground</item>
        <item name="android:padding">30dp</item>

    </style>
    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18dp</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="MaterialComponents_Chip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipMinHeight">40dp</item>
        <item name="chipIconSize">20dp</item>
        <item name="chipCornerRadius">30dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2_Thin</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2_Thin" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">18sp</item>

    </style>
    <style name="MaterialComponents_Chip2" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="chipMinHeight">40dp</item>
        <item name="chipIconSize">20dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipCornerRadius">30dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2_Thin</item>
    </style>
</resources>
