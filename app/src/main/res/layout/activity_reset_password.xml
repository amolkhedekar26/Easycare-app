<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.login"
    android:background="#D4EFDF"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#D4EFDF">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="139dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:src="@drawable/reset_password_icon" />


    </FrameLayout>
    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frame"
        android:text="Reset password"
        android:textColor="@color/colorDarkPurple"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/link_expire_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sorry !\n The link has expired."
        android:layout_marginTop="100dp"
        android:textColor="@color/colorPurple"
        android:textSize="24sp"
        android:visibility="invisible" />
    <LinearLayout
        android:id="@+id/lina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView20"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="40dp">

        <!--<EditText
            android:id="@+id/token_text"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:layout_height="60dp"
            android:shadowColor="@color/colorBlack"
            android:shadowDy="5"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Enter token"
            android:textSize="18dp"
            android:background="@drawable/edittext"/>-->


        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:shadowColor="@color/colorBlack"
            android:shadowDy="5"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/password1_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Reset password"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>

    <!--<TextView
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/edittext2"
        android:gravity="center"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:text="Email verified.Please check your mailbox to get reset instructions."
        android:textColor="@color/colorPurple"
        android:textSize="20sp" />-->

</RelativeLayout>