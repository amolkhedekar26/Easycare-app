<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Chat">




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/chat_action_bar"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorBackground"
            android:textSize="28sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scrollbars="none"
        android:background="@color/colorFaintYellow">
    </ScrollView>-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/chat_layout_border" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/type_query"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="665dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_rounded_cornwe"
            android:ems="10"
            android:foregroundTint="@color/colorGrey"
            android:hint="      Type here..."
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxWidth="55dp"
            android:paddingLeft="30dp" />


        <ImageView
            android:id="@+id/send"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="655dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/send_icon_2" />
    </LinearLayout>
</RelativeLayout>